<Window x:Class="SA_DE_OM_Changer.AddVersionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Version"
        Width="400" Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1e1e1e">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- Version field -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Game Version:" Foreground="White" FontSize="14"/>
                <TextBlock Text=" ⓘ" Foreground="LightGray" FontSize="14" Cursor="Help">
                    <TextBlock.ToolTip>
                        <ToolTip Background="#333" Foreground="White" BorderBrush="#555" ToolTipService.InitialShowDelay="10">
                            <StackPanel>
                                <Image Source="pack://application:,,,/Images/version_example.png" Margin="0,0,0,5"/>
                                <TextBlock Text="Enter the exact file version of SanAndreas.exe. Example: 1.0.0.14388"/>
                            </StackPanel>
                        </ToolTip>
                    </TextBlock.ToolTip>
                </TextBlock>
            </StackPanel>
            <TextBox x:Name="VersionBox"
                     Background="#333"
                     Foreground="White"
                     BorderBrush="#555"
                     FontSize="14"
                     Padding="5"/>

            <!-- Address field -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Address (Hex):" Foreground="White" FontSize="14"/>
                <TextBlock Text=" ⓘ" Foreground="LightGray" FontSize="14" Cursor="Help">
                    <TextBlock.ToolTip>
                        <ToolTip Background="#333" Foreground="White" BorderBrush="#555" ToolTipService.InitialShowDelay="10" Cursor="">
                            <StackPanel>
                                <Image Source="pack://application:,,,/Images/address_example.png" Margin="0,0,0,5"/>
                                <TextBlock Text="Enter the memory offset found in Cheat Engine as hex. Example: 5010878"/>
                            </StackPanel>
                        </ToolTip>
                    </TextBlock.ToolTip>
                </TextBlock>
            </StackPanel>
            <TextBox x:Name="AddressBox"
                     Background="#333"
                     Foreground="White"
                     BorderBrush="#555"
                     FontSize="14"
                     Padding="5"/>

            <!-- Add button -->
            <Button Content="Add"
                    Click="Add_Click"
                    Padding="8,4"
                    FontSize="14"
                    Background="#444"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>